{
  "name": "ts-rest",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ts-rest/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/ts-rest",
        "main": "libs/ts-rest/src/index.ts",
        "tsConfig": "libs/ts-rest/tsconfig.lib.json",
        "assets": ["libs/ts-rest/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/ts-rest/**/*.ts", "libs/ts-rest/package.json"]
      }
    }
  },
  "tags": []
}
